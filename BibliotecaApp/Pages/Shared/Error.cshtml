@model ErrorModel
@{
    ViewData["Title"] = "Error";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .error-container {
            text-align: center;
            padding: 20px;
        }

        .error-image {
            max-width: 300px;
            margin-bottom: 20px;
        }

        .error-container h2 {
            color: #d9534f; /* Cor vermelha para o título */
        }

        .error-message {
            font-size: 18px;
            margin-bottom: 20px;
        }

        .action-message {
            margin-top: 30px;
            font-weight: bold;
        }

        .error-actions {
            list-style-type: none;
            padding: 0;
        }

        .error-actions li {
            margin-bottom: 10px;
        }

        .error-actions li a {
            color: #007bff;
        }

        .error-actions li a:hover {
            text-decoration: underline;
        }
    </style>
}

<div class="error-container">
    <img src="https://devot.team/assets/blogs/http_status_codes_cheat_sheet/header-9c56bfbf3ee239681a83b6d654c80daaa4aeb55b2f6e77199c8ff373731d8471.svg" alt="Error" class="error-image">
    <h2 class="display-4">Oops! Algo deu errado.</h2>

    <p class="error-message">
        @Model.Message
    </p>

    @if (Model.ShowRequestId)
    {
        <p class="text-muted">
            <small>ID do Erro: @Model.RequestId</small>
        </p>
    }

    <p class="action-message">Aqui estão algumas opções de ações a serem tomadas:</p>
    <ul class="error-actions">
        <li>
            <a asp-action="Index" asp-controller="Livros">Volte para a página inicial</a>
        </li>
        <li>
            <a href="javascript:history.back()">Tente a última ação novamente</a>
        </li>
        <li>
            Se acredita que isso é um erro do sistema, entre em contato com o administrador pelo email <a href="mailto:contato@BibliotecaApp.com">contato@BibliotecaApp.com</a>
        </li>
    </ul>
</div>
